<Window x:Class="Schedule.AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schedule"
        mc:Ignorable="d"
        Title="AddItem" Height="200" Width="250">
    <Grid>
        <TextBox x:Name="addItemsText" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200"></TextBox>
        <Button x:Name="ok" Click="ok_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="50">Cancel</Button>
        <Button x:Name="cancel" Click="cancel_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="50">OK</Button>
    </Grid>
</Window>
